<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@color/gray3"
    tools:context=".activities.MaintenanceDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.flaviofaria.kenburnsview.KenBurnsView
                    android:id="@+id/image_bg"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/user_profile"
                    />
                <ImageView
                    android:id="@+id/image_back"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/black_back_arrow"
                    android:padding="18dp"
                    />
            </FrameLayout>

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:siBorderWidth="1dp"
                app:siBorderColor="@color/gray1"
                app:siRadius="5dp"
                app:siBorderType="stroke"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-75dp"
                android:src="@drawable/user_profile"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:text="name"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/cardView_PhoneCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:clickable="false"
                android:longClickable="false"
                android:descendantFocusability="blocksDescendants"

                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:src="@drawable/phone_icon"
                    android:padding="12dp"
                    android:clickable="false"
                    android:longClickable="false"
                    />
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:text="01017357658"
                    android:clickable="false"
                    android:longClickable="false"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="1dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"

                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:src="@drawable/black_map_icon"
                    android:padding="11dp"
                    />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:text="شبين الكوم المنوفية"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="1dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"

                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:src="@drawable/black_map_icon"
                    android:padding="11dp"
                    />
                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:text="مصر"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_location"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_maintenance_map"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/press_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:letterSpacing=".1"
            android:text="@string/view_location"
            />
    </LinearLayout>
</ScrollView>